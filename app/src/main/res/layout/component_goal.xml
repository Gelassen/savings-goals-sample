<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/goal_general_padding"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/goal_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="@dimen/goal_image_height"
            android:transitionName="@string/transition_goal_image"
            />

        <TextView
            android:id="@+id/goal_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/goal_title_height"
            android:paddingLeft="@dimen/goal_left_padding"
            android:paddingRight="@dimen/goal_left_padding"
            android:layout_above="@+id/goal_price"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_title"
            android:textStyle="bold"
            android:textSize="@dimen/goal_text_size"
            android:text="Sample title"
            />

        <TextView
            android:id="@+id/goal_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/goal_title_height"
            android:paddingLeft="@dimen/goal_left_padding"
            android:paddingRight="@dimen/goal_left_padding"
            android:layout_below="@+id/goal_image"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="600$ to 1000$"
            android:textColor="@color/color_price"
            android:background="@color/color_price_bcg"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>
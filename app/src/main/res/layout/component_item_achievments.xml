<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/achievements_height"
    android:padding="@dimen/achievements_padding"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="2dp"
    >

    <!-- Aim of additional container is aligned UI to the center on different screens sizes -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/achievement_cost"
        >


        <TextView
            android:id="@+id/achievement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="You walked 5 km"
            />

        <TextView
            android:id="@+id/achievement_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="2 hours ago"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/achievement_cost"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:minEms="4"
        android:text="10 USD"
        />

</RelativeLayout>